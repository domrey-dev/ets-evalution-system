FROM php:8.2-fpm

WORKDIR /app

COPY ./build/scripts/entrypoint.sh /bin/entrypoint.sh

RUN install -m 755 ./build/scripts/entrypoint.sh /bin/entrypoint.sh

EXPOSE 3000

HEALTHCHECK --interval=30s --timeout=30s --start-period=5s --retries=3 CMD curl -f http://localhost:3000/api/docker-healthcheck || exite 1

ENTRYPOINT ["/bin/entrypoint.sh"]

CMD ["app:start"]
